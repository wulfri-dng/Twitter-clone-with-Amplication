datasource mongo {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  birthday    DateTime
  email       String
  id          String   @id @default(auto()) @map("_id") @mongo.ObjectId
  likedTweets Json
  name        String
  password    String
  roles       Json
  tweets      Json
  username    String   @unique
}

model Tweet {
  comments  Json
  content   String
  dateTime  DateTime
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  likeCount Int
  userId    String
  viewCount Int
}
